<Window x:Class="Lab1sis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1sis"
        mc:Ignorable="d"
        Title="Process Manager" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <RadioButton x:Name="WaitForExitRadioButton" Content="Ожидать завершения дочернего процесса" IsChecked="True" Margin="5"/>
            <RadioButton x:Name="KillProcessRadioButton" Content="Принудительно завершить дочерний процесс" Margin="5"/>
            <Button Content="Запустить процесс" Click="StartProcessButton_Click" Margin="5"/>
            <TextBlock x:Name="ResultTextBlock" Text="" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>